@page "/x"
@model Index2Model
@{
    ViewData["Title"] = "Home page";
}

<h2>Index-2</h2>
<div>
    <button id="newButton" class="btn-link">New Book</button>
</div>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td width="100">@book.Title</td>
                    <td width="100">@book.Authors</td>
                    <td width="40">
                        <a asp-page="Edit" asp-route-id="@book.Id">Edit</a> |
                        <a asp-page="Delete" asp-route-id="@book.Id">Del</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <div id="editPanel" style="visibility:hidden">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" class="form-control" />
            </div>
            <div class="form-group">
                <label for="authors">Authors</label>
                <input type="text" id="authors" class="form-control" />
            </div>
            <button class="btn btn-primary" id="saveButton">Save</button>
        </div>    
    </div>
</div>

