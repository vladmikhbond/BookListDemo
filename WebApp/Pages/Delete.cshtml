@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<form method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="@Model.Book.Title" disabled/>
    </div>
    <div class="form-group">
        <label for="authors">Authors</label>
        <input type="text" name="authors" id="authors" class="form-control" value="@Model.Book.Authors" disabled/>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

